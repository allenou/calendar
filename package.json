{
  "name": "@pigsking/vue-mark-calendar",
  "version": "0.3.0",
  "private": false,
  "description": "A simple calendar mark component for vuejs2.x",
  "author": "Allen AuYeung<oyqxiao@sina.com>",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build:lib": "vue-cli-service build --target lib --dest lib packages/index.js",
    "prepublishOnly":"npm run build:lib",
    "test:unit": "vue-cli-service test:unit"
  },
  "devDependencies": {
    "@pigsking/vue-mark-calendar": "^0.2.0",
    "@vue/cli-plugin-babel": "^3.0.1",
    "@vue/cli-plugin-eslint": "^3.0.1",
    "@vue/cli-plugin-unit-jest": "^4.1.2",
    "@vue/cli-service": "^3.0.1",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-plugin-component": "^1.1.1",
    "sass-loader": "^7.1.0",
    "vue": "^2.5.17",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      },
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      },
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      },
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "bugs": {
    "url": "https://github.com/pigsking/vue-mark-calendar/issues"
  },
  "homepage": "https://github.com/pigsking/vue-mark-calendar#README.zh_CN",
  "keywords": [
    "vue",
    "component",
    "calendar",
    "mark"
  ],
  "license": "GLWTPL",
  "main": "lib/vue-mark-calendar.umd.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pigsking/vue-mark-calendar.git"
  },
  "unpkg": "lib/vue-mark-calendar.umd.min.js"
}
